<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%= link_to "フォロー",  :controller => "users", :action => "following" %>
      <%= link_to "フォロワー",  :controller => "users", :action => "follower" %>
      <%= link_to "お気に入り",  :controller => "users", :action => "favorites" %></p>
    </section>
    <%= @user.profile %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
