<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <span style="margin-right: 30px;"><%= link_to "フォロー",  :controller => "users", :action => "following" %></span>
    <%= link_to "フォロワー",  :controller => "users", :action => "follower" %>
  </aside>
  <div class="col-md-8">
      <h3>フォロー（<%= @users.count %>）</h3>
      <div>
        <% @users.each do |user| %>
        <div>
        <p style="clear:left;"><hr /><%= gravatar_for user %>
         <h4><%= user.name %></h4><%= user.profile %></p>
        </div>
        <% end %>
      </div>
  </div>
</div>


