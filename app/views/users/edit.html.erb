<h1>登録情報</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  名前：
  <%= f.text_field :name %>
  メールアドレス:
  <%= f.text_field :email %>
  地域：
  <%= f.text_field :area %>
  自己紹介:
  <%= f.text_area :profile %>
  パスワード（新しいパスワード）
  <%= f.password_field :password %> 
  パスワード（確認用）
  <%= f.password_field :password_confirmation %> 
  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>